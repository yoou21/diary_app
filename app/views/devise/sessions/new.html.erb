<div style="max-width: 800px; margin: 50px auto; padding: 20px; border: 1px solid #ddd; border-radius: 8px;">
  <% content_for :title, "ログイン | 目標管理アプリ" %>
  <h1>ログイン</h1>
  <p>アカウントをお持ちの方は、以下のフォームからログインしてください。</p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <table>
      <tr>
        <td><%= f.label :email, "メールアドレス" %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <td><%= f.label :password, "パスワード" %></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
    </table>

    <div style="text-align: center; margin-top: 20px;">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>